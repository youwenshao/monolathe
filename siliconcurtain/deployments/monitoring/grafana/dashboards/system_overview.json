{
  "dashboard": {
    "title": "SiliconCurtain - System Overview",
    "uid": "sc-overview",
    "timezone": "Asia/Hong_Kong",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Daily Progress",
        "type": "gauge",
        "targets": [
          {
            "expr": "daily_target_progress",
            "legendFormat": "Progress"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "green", "value": 0.8}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Videos Generated Today",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(videos_uploaded_total[24h])",
            "legendFormat": "Total"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Upload Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(videos_uploaded_total{status=\"success\"}[1h]) / rate(videos_uploaded_total[1h])",
            "legendFormat": "Success %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.95},
                {"color": "green", "value": 0.98}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Cost Per Video",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(cost_per_video_usd)",
            "legendFormat": "USD"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.08},
                {"color": "red", "value": 0.10}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "VRAM Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "vram_usage_percent",
            "legendFormat": "VRAM %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "CPU & Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "cpu_usage_percent",
            "legendFormat": "CPU"
          },
          {
            "expr": "memory_usage_percent",
            "legendFormat": "Memory"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Upload Queue Depth",
        "type": "timeseries",
        "targets": [
          {
            "expr": "upload_queue_depth",
            "legendFormat": "Queue Depth"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Active Generation Jobs",
        "type": "timeseries",
        "targets": [
          {
            "expr": "generation_concurrent_jobs",
            "legendFormat": "{{type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ]
  }
}