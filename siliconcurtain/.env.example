# =============================================================================
# SiliconCurtain Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=change-this-in-production

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite+aiosqlite:///./data/siliconcurtain.db
DATABASE_ECHO=false

# -----------------------------------------------------------------------------
# Redis (Message Broker & Cache)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# -----------------------------------------------------------------------------
# DeepSeek API (SiliconFlow)
# -----------------------------------------------------------------------------
DEEPSEEK_API_KEY=your-siliconflow-api-key
DEEPSEEK_BASE_URL=https://api.siliconflow.cn/v1
DEEPSEEK_MODEL=deepseek-ai/DeepSeek-V3
DEEPSEEK_TIMEOUT=30
DEEPSEEK_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Local LLM (Ollama on Studio)
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://studio.local:11434
OLLAMA_MODEL=qwen2.5:72b

# -----------------------------------------------------------------------------
# Reddit API (PRAW)
# -----------------------------------------------------------------------------
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=SiliconCurtain/0.1.0
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password

# -----------------------------------------------------------------------------
# YouTube Data API v3
# -----------------------------------------------------------------------------
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-oauth-client-id
YOUTUBE_CLIENT_SECRET=your-oauth-client-secret
YOUTUBE_REFRESH_TOKEN=your-refresh-token

# -----------------------------------------------------------------------------
# Instagram Graph API
# -----------------------------------------------------------------------------
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-business-account-id

# -----------------------------------------------------------------------------
# Hardware Topology
# -----------------------------------------------------------------------------
STUDIO_HOST=studio.local
STUDIO_PORT=11434
MINI_HOST=mini.local
SHARED_STORAGE_PATH=/Volumes/ai_content_shared

# -----------------------------------------------------------------------------
# Asset Generation Limits
# -----------------------------------------------------------------------------
MAX_CONCURRENT_VIDEO_GENS=2
MAX_CONCURRENT_IMAGE_GENS=4
MAX_VRAM_USAGE_GB=44

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
TRENDSCOUT_RATE_LIMIT=60
TRENDSCOUT_RATE_WINDOW=60
MAX_UPLOADS_PER_HOUR=3

# -----------------------------------------------------------------------------
# Compliance & Safety
# -----------------------------------------------------------------------------
BAIDU_CENSOR_API_KEY=your-baidu-key
BAIDU_CENSOR_SECRET=your-baidu-secret
ENABLE_AI_DISCLOSURE=true
ENABLE_CONTENT_SAFETY=true
